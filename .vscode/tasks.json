{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${workspaceFolder}\\*",
                "-o",
                "a.exe",
                "-Wall"
            ],
            
        },
        {
            "label": "delete a.exe",
            "type": "shell",
            "command": "del ${workspaceFolder}\\a.exe",
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make"
        }
    ]
}